@model List<BuyerVM>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    <i class="fas fa-caret-square-left"></i>
    Back to Home Page
</a>
<a asp-controller="Buyer" asp-action="Add" class="btn btn-success">
    <i class="fas fa-plus"></i>
    Add New Buyer
</a>
<br />
<br />

@if (Model.Count() < 1)
{
    <div class="alert alert-info">
        No Buyer Records Found...
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Middle Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@item.Middlename</td>
                    <td>
                        <a asp-controller="Buyer" asp-action="Edit" asp-route-Id="@item.Id"
                           class="btn btn-info btn-sm">
                            <i class="fas fa-edit"></i>
                            Edit
                        </a>
                        <button class="btn btn-danger btn-sm deleteBtn" data-id="@item.Id">
                            <i class="fas fa-trash"></i>
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<form id="DeleteForm" asp-controller="Buyer" asp-action="Delete" method="post">
    <input type="hidden" id="HiddenBuyerId" name="Id" value="" />
</form>

@section Scripts {
    <script>
        $('.deleteBtn').click(function (e) {
            swal({
                title: "Are you sure?",
                text: "Are you sure you want to delete this record?",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((confirm) => {
                if (confirm) {
                    var btn = $(this);
                    var id = btn.data("id");
                    $("#HiddenBuyerId").val(id);
                    $("#DeleteForm").submit();
                }
            });
        });
    </script>
}