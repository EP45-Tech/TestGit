@model SellerVM

<h3>Add a New Seller</h3>

<form asp-controller="Seller" asp-action="Add" method="post">

    <label asp-for="LastName"></label>
    <input type="text" asp-for="LastName" class="form-control" />
    <br />

    <label asp-for="FirstName"></label>
    <input type="text" asp-for="FirstName" class="form-control" />
    <br />

    <label asp-for="Middlename"></label>
    <input type="text" asp-for="Middlename" class="form-control" />
    <br />

    <a asp-controller="Seller" asp-action="Index" class="btn btn-primary">
        <i class="fas fa-chevron-circle-left"></i>
        Back
    </a>
    <input type="submit" value="Add Seller" class="btn btn-primary" />
</form>