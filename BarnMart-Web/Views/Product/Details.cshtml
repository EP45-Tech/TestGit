@model Product

<div>
    <h2>@Model.Id</h2>
    <p>Price: @Model.Price.ToString("C")</p>
    <form asp-action="AddProductToCart" method="post">
        <input type="hidden" name="productId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Add to Cart</button>
    </form>
</div>