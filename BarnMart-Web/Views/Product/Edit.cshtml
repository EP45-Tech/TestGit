@model ProductVM

<h3>Edit Product</h3>

<form asp-controller="Product" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <label asp-for="ProductName "></label>
    <input type="text" asp-for="ProductName " class="form-control" />
    <span asp-validation-for="ProductName " class="text-danger"></span>
    <br />

    <label asp-for="Description"></label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />

    <label asp-for="Available"></label>
    <input type="text" asp-for="Available" class="form-control" />
    <span asp-validation-for="Available" class="text-danger"></span>
    <br />

    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
        Back
    </a>
    <input type="submit" class="btn btn-success" value="Save Changes" />
</form>

